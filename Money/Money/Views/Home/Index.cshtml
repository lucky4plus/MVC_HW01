@model Money.Models.ViewModels.MoneyViewModel
@using Money.Models.ViewModels
@{
    ViewBag.Title = "我的記帳本";
}

<div class="container body-content">
    <div class="well">


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(m => m.Category, null, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.DropDownListFor(m => m.Category,
                                                   EnumHelper.GetSelectList(typeof(MyCategory)),
                                                   "請選擇",
                                                   new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Category, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Money, null, new { @class = "col-sm-2 control-label" })

                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Money, new { @class = "form-control", @placeholder = "金額", type = "number" })
                        @Html.ValidationMessageFor(m => m.Money, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Date, null, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Date, new { @class = "form-control", @placeholder = "YYYY-MM-DD" })
                        @Html.ValidationMessageFor(m => m.Date, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Remark, null, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">

                        @Html.TextAreaFor(m => m.Remark, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Remark, "", new { @class = "text-danger" })


                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-8 col-sm-4">
                        <button type="submit" class="btn btn-default">送出</button>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="row">
        <div class="col-md-12">
            @Html.Action("ListMyMoney")
        </div>
    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
